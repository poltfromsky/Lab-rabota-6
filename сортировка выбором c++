#include <iostream>
#include <vector>

using namespace std;

// Функция сортировки выбором (selection sort)
void selectionSort(vector<int>& arr) {
    int n = arr.size();
    for (int i = 0; i < n; ++i) {
        int minIndex = i;
        // Находим индекс минимального элемента в остатке массива
        for (int j = i + 1; j < n; ++j) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;
            }
        }
        // Меняем местами arr[i] и arr[minIndex]
        swap(arr[i], arr[minIndex]);
    }
}

// Вспомогательная функция для печати массива
void printArray(const vector<int>& arr) {
    for (int v : arr) {
        cout << v << " ";
    }
    cout << endl;
}

int main() {
    vector<int> test_array = {64, 25, 12, 22, 11};

    cout << "Исходный массив: ";
    printArray(test_array);

    selectionSort(test_array);

    cout << "Отсортированный массив: ";
    printArray(test_array);

    return 0;
}
