#include <iostream>
#include <vector>
using namespace std;

// Функция для поддержания свойства кучи (heapify)
void heapify(vector<int>& arr, int n, int i) {
    int largest = i;         // Изначально считаем текущий элемент наибольшим
    int left = 2 * i + 1;    // левый дочерний элемент
    int right = 2 * i + 2;   // правый дочерний элемент

    // Если левый дочерний больше корня
    if (left < n && arr[left] > arr[largest])
        largest = left;

    // Если правый дочерний больше текущего наибольшего
    if (right < n && arr[right] > arr[largest])
        largest = right;

    // Если наибольший элемент не корень
    if (largest != i) {
        swap(arr[i], arr[largest]);
        // Рекурсивно вызываем heapify для поддерева
        heapify(arr, n, largest);
    }
}

// Основная функция сортировки (Heap Sort)
void heapSort(vector<int>& arr) {
    int n = arr.size();

    // Строим max-heap (пирамиду)
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i);

    // Один за другим извлекаем элементы из кучи
    for (int i = n - 1; i >= 0; i--) {
        // Перемещаем корень (максимум) в конец массива
        swap(arr[0], arr[i]);
        // Вызываем heapify для уменьшенной кучи
        heapify(arr, i, 0);
    }
}

// Вспомогательная функция для вывода массива
void printArray(const vector<int>& arr) {
    for (int num : arr)
        cout << num << " ";
    cout << endl;
}

int main() {
    vector<int> arr = {12, 11, 13, 5, 6, 7};

    cout << "Исходный массив: ";
    printArray(arr);

    heapSort(arr);

    cout << "Отсортированный массив: ";
    printArray(arr);

    return 0;
}
